{% extends 'JarryUbuBundle::masterlayout.html.twig' %}

{% block navigationZone %}
    <a href="{{ path('jarry_ubu_homepage') }}"><li class="mdl-menu__item mdl-color--indigo-900 mdl-color-text--purple-100">LOGOUT</li></a>
    <a href="{{ path('ubu_place') }}"><li class="mdl-menu__item mdl-color--indigo-100 mdl-color-text--purple-900">Liste des places</li></a>
    <a href="{{ path('ubu_place_show', {'id': entity.id}) }}"><li class="mdl-menu__item mdl-color--indigo-100 mdl-color-text--purple-900">Retour à la place</li></a>
    <a href="{{ path('jarry_ubu_homepage') }}"><li class="mdl-menu__item mdl-color--indigo-900 mdl-color-text--purple-100">Mentions légales</li></a>
{% endblock %}

{% block content -%}
    <main class="mdl-layout__content fond">
        <div class="mdl-grid demo-content">
            <div class="demo-charts mdl-color--purple-900 mdl-color-text--purple-200 mdl-shadow--2dp mdl-cell mdl-cell--12-col mdl-grid centrer">
                <h3 class="centrer">{{ entity.name|upper }}{{ entity.id }}</h3>
            </div>
            <div class="demo-charts fond2 mdl-shadow--2dp mdl-cell mdl-cell--12-col mdl-grid">
                <div class="form">
                    {{ form(edit_form, { 'attr': {'class': 'formulaire'} } ) }}
                </div>
            </div>
            <div class="demo-charts fond2 mdl-shadow--2dp mdl-cell mdl-cell--12-col mdl-grid">
                
                        <a href="{{ path('ubu_place') }}" class="{{ btnCss }}">
                            Back to the list
                        </a>
                    {{ form(delete_form) }}
            </div>
        </div>
    </main>
{% endblock %}
