{% extends 'JarryUbuBundle::masterlayout.html.twig' %}

{% block title %}
    UBU edit a Place
{% endblock %}

{% block titre %}
    UBU edition
{% endblock %}

{% block status %}
    Nom DU TYPE
{% endblock %}

{% block navigationZone %}
    <a href="{{ path('jarry_ubu_homepage') }}"><li class="{{ navDarkCss}}">LOGOUT</li></a>
    <a href="{{ path('ubu_place') }}"><li class="{{ navCss }}">Liste des places</li></a>
    <a href="{{ path('ubu_place_show', {'id': entity.id}) }}"><li class="{{ navCss }}">Retour à la place</li></a>
    <a href="{{ path('jarry_ubu_homepage') }}"><li class="{{ navDarkCss }}">Mentions légales</li></a>
{% endblock %}

{% block content -%}
    <main class="mdl-layout__content fond">
        <div class="mdl-grid demo-content">
            <div class="{{ titreCss }}">
                <h3 class="centrer">Editer {{ entity.name|upper }}</h3>
            </div>
            <div class="{{ containerCss }}">
                <div class="form">
                    {{ form(edit_form, { 'attr': {'class': 'formulaire'} } ) }}
                </div>
            </div>
            <div class="{{ containerCss }}">
                
                        <a href="{{ path('ubu_place') }}" class="{{ btnCss }}">
                            Retour à la liste
                        </a>
                    {{ form(delete_form) }}
            </div>
        </div>
    </main>
{% endblock %}
