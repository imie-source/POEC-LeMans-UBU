{% extends 'JarryUbuBundle::masterlayout.html.twig' %}

{% block navigationZone %}
    {% if app.user %} <a href="{{ path('fos_user_security_logout') }}"><li class="{{ navDarkCss}}"><img src="{{ asset('bundles/jarryubu/images/log-mini.png') }}"/>LOGOUT</li></a> {% endif %}
    <a href="{{ path('jarry_ubu_homepage') }}"><li class={{ navCss }}>Page d'accueil</li></a>
    <a href="{{ path('jarry_ubu_mentions') }}"><li class="{{ navDarkCss }}">Mentions légales</li></a>
{% endblock %}

{% block content %}

    <main class="mdl-layout__content fond">
        <div class="mdl-grid demo-content">

            <div class="{{ titreCss }}}">
                {% if app.user %} 

                    <h3>Bienvenue sur votre espace UBU!</h3>
                {% else %}

                    <h3>Découvrez l'univers UBU!</h3>
                {% endif %}

            </div>

            <div class="{{ containerCss }}">
                {% if app.user %} 
                    <a href="{{ path('ubu_place') }}">
                        <button class="{{ carreClicCss }}">
                            <img src="{{ asset('bundles/jarryubu/images/house.png') }}"/>
                            <h3>PLACES</h3>
                            <p>Accédez à vos places</p>
                        </button>
                    </a>
                    <a href="{{ path('fos_user_profile_show') }}">
                        <button class="{{ carreClicCss }}">
                            <img src="{{ asset('bundles/jarryubu/images/log.png') }}"/>
                            <h3>INFOS</h3>
                            <p>Modifiez vos informations personnelles</p>
                        </button>
                    </a>
                    <button class="{{ carreClicCss }}">
                        <img src="{{ asset('bundles/jarryubu/images/stat.png') }}"/>
                        <h3>STATS</h3>
                        <p>Visualisez vos statistiques</p>
                    </button>
                    <button class="{{ carreClicCss }}">
                        <img src="{{ asset('bundles/jarryubu/images/help.png') }}"/>
                        <h3>AIDE</h3>
                        <p>Consultez l'aide en ligne</p>
                    </button>
                {% else %}
                    <button class="{{ carreClicCss }}">
                        <img src="{{ asset('bundles/jarryubu/images/house.png') }}"/>
                        <h3>PLACES</h3>
                        <p>Gérez vos divers domiciles</p>
                    </button>
                    <button class="{{ carreClicCss }}">
                        <img src="{{ asset('bundles/jarryubu/images/zone.png') }}"/>
                        <h3>Zones</h3>
                        <p>Définissez vos zones</p>
                    </button>
                    <button class="{{ carreClicCss }}">
                        <img src="{{ asset('bundles/jarryubu/images/node.png') }}"/>
                        <h3>Objets</h3>
                        <p>Gérez vos objets connectés</p>
                    </button>
                    <button class="{{ carreClicCss }}">
                        <img src="{{ asset('bundles/jarryubu/images/log.png') }}"/>
                        <h3>LOGIN</h3>
                        <p>Utilisez votre session utisateur</p>
                    </button>
                {% endif %}
            </div>

        </div>
    </main>
{% endblock %}
